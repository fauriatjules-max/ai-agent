{
  "name": "duolingo-pilotage",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dev:fullstack": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon src/main/server.ts",
    "generate:assets": "node scripts/generate-assets.js",
    "seed:database": "node scripts/seed-db.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "docker:build": "docker build -t duolingo-pilotage .",
    "docker:run": "docker run -p 3000:3000 duolingo-pilotage"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "three": "^0.155.0",
    "@react-three/fiber": "^8.13.5",
    "@react-three/drei": "^9.84.3",
    "zustand": "^4.4.0",
    "framer-motion": "^10.12.16",
    "@radix-ui/react": "^1.0.0",
    "lucide-react": "^0.263.1",
    "axios": "^1.4.0",
    "socket.io-client": "^4.6.1",
    "chart.js": "^4.3.0",
    "react-hook-form": "^7.45.0",
    "zod": "^3.21.4",
    "date-fns": "^2.30.0",
    "i18next": "^23.2.1",
    "react-i18next": "^13.0.0",
    "howler": "^2.2.3",
    "localforage": "^1.10.0",
    "dexie": "^3.2.3",
    "pwa-asset-generator": "^6.3.1",
    "workbox": "^7.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/three": "^0.155.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^0.34.0",
    "@playwright/test": "^1.36.0"
  }
}
