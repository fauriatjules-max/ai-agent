{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron app for ProVideoEditor",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "package": "electron-builder --publish=never",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@provideoeditor/core": "workspace:*",
    "@provideoeditor/ffmpeg-orchestrator": "workspace:*",
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "typescript": "^5.3.3"
  }
}
