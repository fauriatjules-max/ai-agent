# EditorConfig: https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.sql]
indent_size = 4

[*.html]
indent_size = 2
max_line_length = 120

[*.css]
indent_size = 2
max_line_length = 120

[*.scss]
indent_size = 2
max_line_length = 120

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.jsx]
indent_size = 2

[*.vue]
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[*.java]
indent_size = 4

[*.cpp]
indent_size = 4

[*.c]
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4

[docker-compose.yml]
indent_style = space
indent_size = 2

[.gitignore]
indent_style = space
indent_size = 2

[*.sql]
max_line_length = 120

[COMMIT_EDITMSG]
max_line_length = 72

[package.json]
indent_size = 2

[tsconfig.json]
indent_size = 2

[*.config.js]
indent_size = 2

[*.ejs]
indent_size = 2

[LICENSE]
insert_final_newline = false

[CHANGELOG.md]
trim_trailing_whitespace = false
insert_final_newline = true

[README.md]
trim_trailing_whitespace = false
insert_final_newline = true

[CODE_OF_CONDUCT.md]
trim_trailing_whitespace = false
insert_final_newline = true

[CONTRIBUTING.md]
trim_trailing_whitespace = false
insert_final_newline = true
